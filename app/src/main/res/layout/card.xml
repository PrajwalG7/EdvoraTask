<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="14dp"
    app:cardCornerRadius="4dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black"
        android:orientation="vertical">

        <ImageView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gmap"
            android:layout_marginTop="15dp"
            android:id="@+id/idGmap"
            />
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City Name"
                android:id="@+id/idCityName"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State Name"
                android:id="@+id/idStateName"
                android:textSize="15sp"
                android:layout_marginLeft="138dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride Id: "
                android:id="@+id/idRideId"
                android:textSize="17sp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origin Station: "
                android:id="@+id/idOriginStation"
                android:textSize="17sp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="station_path: "
                android:id="@+id/idStationPath"
                android:textSize="17sp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:id="@+id/idDate"
                android:textSize="17sp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: "
                android:id="@+id/idDistance"
                android:textSize="17sp"
                android:padding="5dp"
                />
        </LinearLayout>




    </LinearLayout>



</androidx.cardview.widget.CardView>

