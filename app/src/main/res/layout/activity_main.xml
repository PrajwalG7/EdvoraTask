<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8434343"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edvora"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:id="@+id/logo"
            />

        <TextView
            android:id="@+id/IdUserLoggedName"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:ellipsize="none"
            android:scrollHorizontally="false"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="360dp"
            android:layout_margin="15dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/IdUserLoggedImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"

                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/rides"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="Rides:"
            android:textSize="16sp"

            />


        <TextView
            android:id="@+id/newestRides"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/rides"
            android:onClick="newestRide"
            android:text="Newest"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming"
            android:textSize="16sp"
            android:id="@+id/UpcomingRides"
            android:layout_toRightOf="@id/newestRides"
            android:layout_marginLeft="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past"
            android:textSize="16sp"
            android:id="@+id/pastRides"
            android:layout_toRightOf="@id/UpcomingRides"
            android:layout_marginLeft="18dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="18dp"
            android:id="@+id/filterImg"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pastRides"
            android:src="@drawable/ic_baseline_menu_open_24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textSize="16sp"
            android:id="@+id/filter"
            android:layout_toRightOf="@id/filterImg"

            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idRV"
        tools:listitem="@layout/card"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"

        />
</androidx.appcompat.widget.LinearLayoutCompat>